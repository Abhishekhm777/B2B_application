<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
    android:focusedByDefault="false"
    android:focusableInTouchMode="true"
android:id="@+id/container" android:orientation="vertical"
xmlns:app="http://schemas.android.com/apk/res-auto"
tools:context=".Fragments.Custom_order">


<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_above="@+id/next">

    <LinearLayout
        android:id="@+id/custom_lay"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12sp"
            android:id="@+id/button_lay"
            android:visibility="visible"
            android:orientation="horizontal">
            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:elevation="4dp">

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textColor="@color/red" />
            </android.support.v7.widget.CardView>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginLeft="15dp"
                >

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginBottom="12sp"
                   android:orientation="vertical">
                <TextView
                    android:id="@+id/customer_na"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="italic"
                    android:layout_marginBottom="4dp"
                    android:text="@string/qty"
                    android:textAppearance="@style/customer_nu"
                    android:gravity="top"
                    />


                <EditText
                    android:id="@+id/qty"
                    android:layout_width="match_parent"
                    android:background="@drawable/light_blue_background"
                    android:layout_height="32dp"
                    android:gravity="center|start"
                    android:paddingLeft="5dp"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:scrollHorizontally="true"
                    android:textColor="#000"
                    android:textSize="16sp" />
               </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12sp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/grwt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="italic"
                        android:layout_marginBottom="4dp"
                        android:text="@string/product_n"
                        android:textAppearance="@style/customer_nu"
                        android:gravity="top"
                        />


                    <EditText
                        android:id="@+id/p_name"
                        android:layout_width="match_parent"
                        android:background="@drawable/light_blue_background"
                        android:layout_height="32dp"
                        android:gravity="center|start"
                        android:paddingLeft="5dp"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:scrollHorizontally="true"
                        android:textColor="#000"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/length"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="italic"
                        android:text="@string/sizelen"
                        android:layout_marginBottom="4dp"
                        android:textAppearance="@style/customer_nu"
                        android:gravity="top"
                        />


                    <EditText
                        android:id="@+id/size"
                        android:layout_width="match_parent"
                        android:background="@drawable/light_blue_background"
                        android:layout_height="32dp"
                        android:gravity="center|start"
                        android:paddingLeft="5dp"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:scrollHorizontally="true"
                        android:textColor="#000"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginRight="8dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="italic"
                    android:text="@string/sea"
                    android:layout_marginBottom="4dp"
                    android:textAppearance="@style/customer_nu"
                    android:gravity="top"
                    />


                <EditText
                    android:id="@+id/seal"
                    android:layout_width="match_parent"
                    android:background="@drawable/light_blue_background"
                    android:layout_height="32dp"
                    android:gravity="center|start"
                    android:paddingLeft="5dp"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:scrollHorizontally="true"
                    android:textColor="#000"
                    android:textSize="16sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="8dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="italic"
                    android:text="@string/melting"
                    android:layout_marginBottom="4dp"
                    android:textAppearance="@style/customer_nu"
                    android:gravity="top"
                    />


                <EditText
                    android:id="@+id/melting"
                    android:layout_width="match_parent"
                    android:background="@drawable/light_blue_background"
                    android:layout_height="32dp"
                    android:gravity="center|start"
                    android:paddingLeft="5dp"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:scrollHorizontally="true"
                    android:textColor="#000"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="4dp"
                android:orientation="vertical"
                android:layout_marginBottom="15dp">


                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="italic"
                    android:layout_marginBottom="4dp"
                    android:text="@string/date"
                    android:textAppearance="@style/customer_nu"
                    android:gravity="top"
                    />

                <EditText
                    android:id="@+id/date"
                    android:layout_width="match_parent"
                    android:background="@drawable/light_blue_background"
                    android:layout_height="32dp"
                    android:editable="false"
                    android:focusable="false"
                    android:gravity="center|start"
                    android:paddingLeft="5dp"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:scrollHorizontally="true"
                    android:textColor="#000"
                    android:textSize="16sp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="4dp"
                android:orientation="vertical"
                android:layout_marginBottom="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="italic"
                    android:focusableInTouchMode="true"
                    android:focusable="true"
                    android:id="@+id/gwt_text"
                    android:layout_marginBottom="4dp"
                    android:text="@string/gross_weigh"
                    android:textAppearance="@style/customer_nu"
                    android:gravity="top"
                    />

                <EditText
                    android:id="@+id/grosswt"
                    android:layout_width="match_parent"
                    android:background="@drawable/light_blue_background"
                    android:layout_height="32dp"
                    android:focusable="true"
                    android:gravity="center|start"
                    android:paddingLeft="5dp"
                    android:maxLines="1"
                    android:inputType="numberDecimal"
                    android:singleLine="true"
                    android:scrollHorizontally="true"
                    android:textColor="#000"
                    android:textSize="16sp" />

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginBottom="15dp">


                <TextView
                    android:id="@+id/customer_nu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="italic"
                    android:layout_marginBottom="4dp"
                    android:text="@string/customer_nu"
                    android:textAppearance="@style/customer_nu"
                    android:gravity="top"
                    />



                <AutoCompleteTextView
                    android:layout_width="match_parent"
                    android:id="@+id/cust_no"
                    android:layout_height="32dp"
                    android:paddingLeft="4dp"
                    android:layout_weight="2"
                    android:background="@drawable/light_blue_background"
                    android:inputType="number"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:textColor="#000"
                    android:textSize="16sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginBottom="15dp">


                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="italic"
                    android:layout_marginBottom="4dp"
                    android:text="@string/customer_na"
                    android:textAppearance="@style/customer_nu"
                    android:gravity="top"
                    />


                <EditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:background="@drawable/light_blue_background"
                    android:layout_height="32dp"
                    android:gravity="center|start"
                    android:paddingLeft="5dp"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:scrollHorizontally="true"
                    android:textColor="#000"
                    android:textSize="16sp" />


            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginBottom="15dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="italic"
                    android:layout_marginBottom="4dp"

                    android:text="@string/customer_em"
                    android:textAppearance="@style/customer_nu"
                    android:gravity="top"
                    />

                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:background="@drawable/light_blue_background"
                    android:layout_height="32dp"
                    android:gravity="center|start"
                    android:paddingLeft="5dp"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:scrollHorizontally="true"
                    android:textColor="#000"
                    android:textSize="16sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginBottom="15dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/company_nam"
                    android:textStyle="italic"
                    android:layout_marginBottom="4dp"
                    android:textAppearance="@style/customer_nu"
                    android:gravity="top"
                    />

                <EditText
                    android:id="@+id/company_name"
                    android:layout_width="match_parent"
                    android:background="@drawable/light_blue_background"
                    android:layout_height="32dp"
                    android:gravity="center|start"
                    android:paddingLeft="5dp"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:scrollHorizontally="true"
                    android:textColor="#000"
                    android:textSize="16sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginBottom="15dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/address"
                    android:layout_marginBottom="4dp"
                    android:textStyle="italic"
                    android:textAppearance="@style/customer_nu"
                    android:gravity="top"
                    />


                <EditText
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:background="@drawable/light_blue_background"
                    android:layout_height="60dp"
                    android:gravity="start"
                    android:paddingLeft="5dp"
                    android:scrollHorizontally="true"
                    android:textColor="#000"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>






    </LinearLayout>
</ScrollView>

    <Button
        android:id="@+id/next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:textSize="15dp"
        android:textColor="@color/white"
        android:background="@color/whish"
        android:hint="NEXT"
        android:textColorHint="@color/white" />

</RelativeLayout>
