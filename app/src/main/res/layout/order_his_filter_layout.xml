<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:focusable="false"
    android:focusedByDefault="false"
    android:layout_marginHorizontal="1dp"
    android:gravity="center"
    android:elevation="10dp"
    >

    <TextView
        android:id="@+id/popup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="5dp"
        android:textSize="18sp"
        android:fontFamily="@font/catamaran"
        android:textColor="@color/mrk"
        android:text="Filters"
        android:gravity="center_horizontal|top"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#DFAF35"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="4dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="By Order Details :"
            />
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_margin="2dp"
        android:background="@drawable/pricebreak_background"
        android:orientation="horizontal">
        <Spinner
            android:id="@+id/orer_details"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textAlignment="center"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:focusable="false"
        android:focusableInTouchMode="true"
        android:focusedByDefault="false"
        android:layout_margin="2dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/values"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:focusedByDefault="false"
            android:background="@drawable/pricebreak_background"
            android:hint="Enter the value"
            android:layout_weight="1"
            android:textAlignment="center"
            />

    </LinearLayout>

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="4dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="By Order Status: :"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:background="@drawable/pricebreak_background"
            android:orientation="horizontal">


            <Spinner

                android:id="@+id/order_status"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:textAlignment="center"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:background="@drawable/pricebreak_background"
            android:orientation="horizontal">



        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="4dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="From Date :"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="To Date :"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="2dp"

            android:orientation="horizontal">


            <TextView

                android:id="@+id/fromdate"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:hint="yyyy-mm-dd"
                android:textColor="@color/black"
                android:gravity="center_horizontal|center_vertical"
                android:background="@drawable/pricebreak_background"
                android:layout_weight="1"
                android:textAlignment="center"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/todate"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:hint="yyyy-mm-dd"
                android:textColor="@color/black"
                android:background="@drawable/pricebreak_background"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"

                />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
       android:layout_margin="20dp"

        >
        <Button
            android:id="@+id/clear"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:fontFamily="@font/catamaran"
            android:background="@drawable/round_corners"
            android:text="Clear"
            android:textColor="#FFF" />

        <Button
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:fontFamily="@font/catamaran"
            android:layout_gravity="right"
            android:background="@drawable/round_corners"
            android:text="Submit"
            android:textColor="#FFF" />
    </LinearLayout>
</LinearLayout>



