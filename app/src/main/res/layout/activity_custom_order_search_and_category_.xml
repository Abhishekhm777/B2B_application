<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/parent"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".Activity.Seller_Order_History">



    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:id="@+id/search_tool"
        android:layout_height="45dp"
        android:elevation="10dp"
        app:titleTextColor="@color/white"
        android:background="@color/Text"
        android:theme="@style/Toolbar_Arrow"
        android:layout_gravity="center"
        android:textAlignment="center">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.SearchView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:searchIcon="@null"
                android:id="@+id/custom_search"
                app:searchHintIcon="@null"
                app:iconifiedByDefault="false"
                android:layout_alignParentRight="true"
                app:defaultQueryHint="Search product"
                android:layout_alignParentEnd="true"

                >

            </android.support.v7.widget.SearchView>
        </RelativeLayout>

    </android.support.v7.widget.Toolbar>




<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/search_tool"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:orientation="vertical">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/cart_frame"
        android:id="@+id/search_frame">

    </FrameLayout>
</LinearLayout>
</RelativeLayout>