        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.2"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/product_name"
                    />
                <EditText
                    android:layout_width="0dp"
                    android:id="@+id/name"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:fontFamily="@font/catamaran"
                    android:gravity="center"
                    android:layout_weight="2"
                    android:background="@drawable/pricebreak_background"
                    android:inputType="text"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:textColor="#000"
                    android:textSize="16sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1.2"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="SKU *"
                />
            <EditText
                android:layout_width="0dp"
                android:id="@+id/sku"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:fontFamily="@font/catamaran"
                android:gravity="center"
                android:layout_weight="2"
                android:background="@drawable/pricebreak_background"
                android:inputType="text"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:textColor="#000"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1.2"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Manufacturer Name"
                />
            <EditText
                android:layout_width="0dp"
                android:id="@+id/manufact_name"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:fontFamily="@font/catamaran"
                android:gravity="center"
                android:layout_weight="2"
                android:background="@drawable/pricebreak_background"
                android:inputType="text"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:textColor="#000"
                android:textSize="16sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1.2"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Manufacturer Mob. No."
                />
            <EditText
                android:layout_width="0dp"
                android:id="@+id/manuf_mob"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:fontFamily="@font/catamaran"
                android:gravity="center"
                android:layout_weight="2"
                android:background="@drawable/pricebreak_background"
                android:inputType="text"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:textColor="#000"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1.2"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="User Classes"
                />
            <TextView
                android:layout_width="0dp"
                android:id="@+id/user_classes"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:fontFamily="@font/catamaran"
                android:gravity="center"
                android:layout_weight="2"
                android:background="@drawable/pricebreak_background"
                android:inputType="text"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:textColor="#000"
                android:textSize="16sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1.2"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Product Type"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@drawable/pricebreak_background"
                android:orientation="vertical">
                <Spinner
                    android:id="@+id/product_type"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:fontFamily="@font/catamaran"
                    android:gravity="bottom"
                    android:textAlignment="center"
                    />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1.2"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Priority"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@drawable/pricebreak_background"
                android:orientation="vertical">

                <Spinner

                    android:id="@+id/priyority"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="bottom"
                    android:textAlignment="center"
                    />

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1.2"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Product Status"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@drawable/pricebreak_background"
                android:orientation="vertical">

                <Spinner

                    android:id="@+id/product_status"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:textAlignment="center"
                    />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1.2"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Required days to deliver"
                />
            <EditText
                android:layout_width="0dp"
                android:id="@+id/delevery_days"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:fontFamily="@font/catamaran"
                android:gravity="center"
                android:layout_weight="2"
                android:background="@drawable/pricebreak_background"
                android:inputType="text"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:textColor="#000"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1.2"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Description"
                />


                <EditText
                    android:id="@+id/description"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:fontFamily="@font/catamaran"
                    android:gravity="center"
                    android:inputType="text"
                    android:layout_weight="2"
                    android:maxLines="3"
                    android:background="@drawable/pricebreak_background"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:textColor="#000"
                    android:textSize="16sp" />

        </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/catamaran"
            android:layout_margin="10dp"
            android:textColor="@color/black"
            android:text="Product Options  :"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">

        <CheckBox
            android:id="@+id/showable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:fontFamily="@font/catamaran"
            android:text="Showable  "
            android:textColor="@color/black" />

        <CheckBox
            android:id="@+id/newlaunch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:fontFamily="@font/catamaran"

            android:text="New launch  "
            android:textColor="@color/black" />
        </LinearLayout>
    </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:gravity="center"
          android:layout_margin="5dp"
          android:layout_marginBottom="25dp"
          android:layout_height="wrap_content">

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="UPLOAD PICTURES/VIDEOS"
              android:fontFamily="@font/catamaran"
              android:textColor="@color/black"
              />
      </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

         <android.support.v7.widget.RecyclerView
             android:layout_width="match_parent"
             android:id="@+id/image_recycler"
             android:layout_height="wrap_content">

         </android.support.v7.widget.RecyclerView>
        </LinearLayout>

<RelativeLayout
    android:id="@+id/relative1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="25dp"
    android:layout_marginLeft="12dp"
   android:layout_marginTop="10dp"
    android:orientation="horizontal">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textColor="@color/white"
        android:id="@+id/image_button"
        android:background="@drawable/round_corners"
        android:text="Image"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="@drawable/round_corners"
        android:text="Video"
        android:id="@+id/vdo_btn"
        android:textColor="@color/white"
        android:layout_alignParentRight="true"/>

</RelativeLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="35dp"
            android:orientation="vertical"
            android:fillViewport="true"
            android:id="@+id/expand_layout"
            android:visibility="gone"
            android:layout_below="@id/relative1"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               android:gravity="center"
                android:textColor="@color/black"
                android:fontFamily="@font/catamaran"
                android:text="Product Specifications"/>
            <ExpandableListView
                android:layout_width="match_parent"
                android:id="@+id/expandable_list"
                android:layout_height="wrap_content"
                android:isScrollContainer="true"
                android:groupIndicator="@null"
                android:fillViewport="true"
                android:indicatorStart="?android:attr/listPreferredItemPaddingStart"
                android:divider="@color/whish"
                android:dividerHeight="1dp"
               >
            </ExpandableListView>




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/buttons"
            android:visibility="gone"
            android:layout_margin="15dp"
            android:layout_marginTop="15dp">
            <Button
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/add_specification"
                android:background="@drawable/round_corners"
                android:textColor="@color/white"
                android:padding="1dp"
                android:fontFamily="@font/catamaran"
                android:layout_margin="4dp"
                android:layout_alignParentLeft="true"
                android:text="Add Specification"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:animateLayoutChanges="true"
                android:id="@+id/stone_layout">



            </LinearLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/add_stone"
                android:background="@drawable/round_corners"
              android:layout_alignParentRight="true"
                android:layout_margin="4dp"
                android:fontFamily="@font/catamaran"
                android:textColor="@color/white"
                android:text="Add Stone Details"/>


            <Button
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:id="@+id/submit"
                android:background="@drawable/round_corners"
              android:layout_gravity="center"
                android:layout_margin="4dp"
                android:fontFamily="@font/catamaran"
                android:textColor="@color/white"
                android:text="Submit"/>

            <ProgressBar
                android:id="@+id/prgLoading"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:visibility="gone"
                style="@android:style/Widget.ProgressBar.Small.Inverse"
                android:layout_gravity="center"/>


        </LinearLayout>

    </LinearLayout>





</ScrollView>
</LinearLayout>