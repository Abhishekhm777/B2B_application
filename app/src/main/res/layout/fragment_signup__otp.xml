<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Fragments.Signup_OtpFragment">
        <android.support.v7.widget.Toolbar
            android:id="@+id/fpassword2_toolbar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#275191"
            android:fitsSystemWindows="true"
            app:title="OTP"
            android:elevation="6dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark">
        </android.support.v7.widget.Toolbar>
        <LinearLayout
            android:id="@+id/otp_layout"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginBottom="40dp"
            android:layout_above="@+id/submit_otp"
            android:gravity="center">
            <android.support.v7.widget.CardView
                android:id="@+id/otpcard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginHorizontal="5dp"
                app:cardBackgroundColor="#e6e6e5"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="1dp">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_centerHorizontal="true"
                    android:textSize="15sp"
                    android:textStyle="italic"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/otp_register"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:paddingHorizontal="10dp"
                        android:background="#e6e6e5"
                        android:gravity="center|start"
                        android:textStyle="italic"
                        android:textColor="#000"
                        android:textSize="16sp"
                        android:maxLines="1"
                        android:hint="Enter OTP"
                        android:singleLine="true"
                        android:inputType="number"
                        android:scrollHorizontally="true"/>
                </android.support.design.widget.TextInputLayout>
            </android.support.v7.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4">
                <TextView
                    android:id="@+id/text_resend"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/submit_otp"
                    android:layout_marginTop="20dp"
                    android:layout_marginHorizontal="10dp"
                    android:text="RESEND OTP"
                    android:layout_weight="2"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="#53AAFA" />
            </LinearLayout>
        </LinearLayout>
    <Button
        android:id="@+id/submit_res_otp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/relativeLayout2"
        android:layout_alignParentBottom="true"
        android:background="#275191"
        android:layout_marginTop="20dp"
        android:text="Enter"
        android:fontFamily="sans-serif-medium"
        android:textColor="#fff"
        android:layout_weight="2"/>
    </RelativeLayout>

