<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context=".Orders_History_Activity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="vertical"
        android:id="@+id/cart_frame">
        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:id="@+id/orderhistory_toolbar"
            android:layout_height="match_parent"
            app:titleTextColor="@color/Titel"
            android:theme="@style/Toolbar_Arrow"
            android:textAlignment="center"
            app:titleTextAppearance="@color/Titel"
            android:background="@color/Toolbar">



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:titleTextColor="@color/Titel"
                android:id="@+id/zoom"
                android:fontFamily="@font/catamaran"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:text="ORDER HISTORY"


                />
        </android.support.v7.widget.Toolbar>
    </LinearLayout>


    <ExpandableListView
        android:id="@+id/order_expand"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:indicatorStart="?android:attr/listPreferredItemPaddingStart"
        ></ExpandableListView>
</LinearLayout>

