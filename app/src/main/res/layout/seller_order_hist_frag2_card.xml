<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardUseCompatPadding="true"
    android:id="@+id/card"
    app:cardCornerRadius="4dp"
    android:background="@drawable/pricebreak_background"
    android:padding="4dp"
    android:layout_marginHorizontal="3dp"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="8dp"
    android:fontFamily="@font/catamaran"
    app:cardPreventCornerOverlap="false"
    app:cardElevation="3dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingRight="10dp"
        android:paddingLeft="5dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginRight="5dp"
                android:fontFamily="@font/catamaran"
                android:text="Order No./Order Item No : "/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/check_orderno"
                android:layout_centerInParent="true"
                android:text="RGFFGGGGGGGGGGG"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/whish"

            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal"
            android:padding="5dp"
            android:weightSum="10">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:layout_gravity="center"
                android:id="@+id/imageview"
                android:layout_margin="2dp"
                android:paddingRight="5dp"
                />
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="4"
                android:layout_marginStart="22dp"
                android:layout_weight="4">

                <TableRow>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="12dp"
                        android:layout_weight="0"
                        android:fontFamily="@font/catamaran"
                        android:text="Product:"
                        android:layout_marginBottom="8dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:layout_weight="4"
                        android:gravity="center"
                        android:fontFamily="@font/catamaran"
                        android:singleLine="true"
                        android:id="@+id/check_produc_name"
                        android:layout_marginBottom="8dp"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="12dp"
                        android:layout_weight="0"
                        android:fontFamily="@font/catamaran"
                        android:text="Quantity: "

                        android:layout_marginBottom="8dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:id="@+id/check_quantity"
                        android:gravity="center"
                        android:layout_weight="2"
                        android:fontFamily="@font/catamaran"
                        android:layout_marginBottom="8dp"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="12dp"
                        android:layout_weight="0"
                        android:fontFamily="@font/catamaran"
                        android:text="Item Status"
                        android:layout_marginBottom="8dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:layout_weight="2"
                        android:fontFamily="@font/catamaran"
                        android:gravity="center"
                        android:id="@+id/check_weight"
                        android:layout_marginBottom="8dp"/>
                </TableRow>
                <TableRow>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_weight="0"
                        android:fontFamily="@font/catamaran"
                        android:text="Purity(Kt)"

                        android:textSize="12dp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="12dp"
                        android:layout_weight="2"
                        android:fontFamily="@font/catamaran"
                        android:id="@+id/purity"
                        android:layout_marginBottom="8dp"/>
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_weight="0"
                        android:fontFamily="@font/catamaran"
                        android:text="Description"

                        android:textSize="12dp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:fontFamily="@font/catamaran"
                        android:id="@+id/desc"
                        android:layout_marginBottom="8dp"/>
                </TableRow>


            </TableLayout>

        </LinearLayout>



    </LinearLayout>



</android.support.v7.widget.CardView>


