            <android.support.v7.widget.CardView
                android:id="@+id/card_adhar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:cardBackgroundColor="#e6e6e5"
                app:cardCornerRadius="5dp"
                app:cardElevation="3dp">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_centerHorizontal="true"
                    android:textSize="15sp"
                    android:textStyle="italic"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/adhar"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_margin="3dp"
                        android:background="#e6e6e5"
                        android:gravity="center|start"
                        android:hint="Aadhar No. "
                        android:textColor="#000"
                        android:textSize="16sp"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:scrollHorizontally="true"/>

                </android.support.design.widget.TextInputLayout>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:id="@+id/adhar_button"
                    android:text="Upload-file"/>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/gstincard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:cardBackgroundColor="#e6e6e5"
                app:cardCornerRadius="5dp"
                app:cardElevation="3dp">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_centerHorizontal="true"
                    android:textSize="15sp"
                    android:textStyle="italic"
                    android:layout_height="wrap_content">


                    <EditText
                        android:id="@+id/gstin"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_margin="3dp"
                        android:background="#e6e6e5"
                        android:gravity="center|start"
                        android:hint="GSTIN *"
                        android:textColor="#000"
                        android:textSize="16sp"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:scrollHorizontally="true"/>


                </android.support.design.widget.TextInputLayout>


                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                  android:layout_gravity="end"
                    android:id="@+id/gstin_button"
                    android:text="Upload-file"/>


            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:id="@+id/pan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:cardBackgroundColor="#e6e6e5"
                app:cardCornerRadius="5dp"
                app:cardElevation="3dp">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_centerHorizontal="true"
                    android:textSize="15sp"
                    android:textStyle="italic"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/pan_field"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_margin="3dp"
                        android:background="#e6e6e5"
                        android:gravity="center|start"
                        android:hint="PAN No.*"
                        android:maxLines="1"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:textColor="#000"
                        android:textSize="16sp" />
                </android.support.design.widget.TextInputLayout>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:id="@+id/pan_button"
                    android:text="Upload-file"/>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:id="@+id/cin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:cardBackgroundColor="#e6e6e5"
                app:cardCornerRadius="5dp"
                app:cardElevation="3dp">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_centerHorizontal="true"
                    android:textSize="15sp"
                    android:textStyle="italic"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/cin_field"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_margin="3dp"
                        android:background="#e6e6e5"
                        android:gravity="center|start"
                        android:hint="Incorporation Number "
                        android:textColor="#000"
                        android:textSize="16sp"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:scrollHorizontally="true"/>
                </android.support.design.widget.TextInputLayout>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:id="@+id/cin_button"
                    android:text="Upload-file"/>
            </android.support.v7.widget.CardView>

