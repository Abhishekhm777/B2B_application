            <android.support.v7.widget.CardView

                android:layout_width="255dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:cardBackgroundColor="#e6e6e5"
                app:cardCornerRadius="5dp"
                app:cardElevation="3dp">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_centerHorizontal="true"
                    android:textSize="15sp"
                    android:textStyle="italic"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/pincode_field"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_margin="3dp"
                        android:background="#e6e6e5"
                        android:gravity="center|start"
                        android:hint="Pincode *"
                        android:textColor="#000"
                        android:textSize="16sp"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:scrollHorizontally="true"/>

                </android.support.design.widget.TextInputLayout>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:id="@+id/check_pin"
                    android:text="Check"/>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:cardBackgroundColor="#e6e6e5"
                app:cardCornerRadius="5dp"
                app:cardElevation="3dp">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_centerHorizontal="true"
                    android:textSize="15sp"
                    android:textStyle="italic"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/country_field"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_margin="3dp"
                        android:background="#e6e6e5"
                        android:gravity="center|start"
                        android:hint="Country *"
                        android:textColor="#000"
                        android:textSize="16sp"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:scrollHorizontally="true"/>
                </android.support.design.widget.TextInputLayout>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:cardBackgroundColor="#e6e6e5"
                app:cardCornerRadius="5dp"
                app:cardElevation="3dp">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_centerHorizontal="true"
                    android:textSize="15sp"
                    android:textStyle="italic"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/state_field"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_margin="3dp"
                        android:background="#e6e6e5"
                        android:gravity="center|start"
                        android:hint="State *"
                        android:textColor="#000"
                        android:textSize="16sp"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:scrollHorizontally="true"/>
                </android.support.design.widget.TextInputLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:cardBackgroundColor="#e6e6e5"
                app:cardCornerRadius="5dp"
                app:cardElevation="3dp">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_centerHorizontal="true"
                    android:textSize="15sp"
                    android:textStyle="italic"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/area_field"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_margin="3dp"
                        android:background="#e6e6e5"
                        android:gravity="center|start"
                        android:hint="Area *"
                        android:textColor="#000"
                        android:textSize="16sp"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:scrollHorizontally="true"/>
                </android.support.design.widget.TextInputLayout>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:cardBackgroundColor="#e6e6e5"
                app:cardCornerRadius="5dp"
                app:cardElevation="3dp">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_centerHorizontal="true"
                    android:textSize="15sp"
                    android:textStyle="italic"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/city_field"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_margin="3dp"
                        android:background="#e6e6e5"
                        android:gravity="center|start"
                        android:hint="City *"
                        android:textColor="#000"
                        android:textSize="16sp"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:scrollHorizontally="true"/>
                </android.support.design.widget.TextInputLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/spinner"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:cardBackgroundColor="#e6e6e5"
                app:cardCornerRadius="5dp"
                app:cardElevation="3dp">


                <Spinner
                    android:id="@+id/spinner_field"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:animateLayoutChanges="true"
                    android:layoutDirection="locale"
                    android:tag="SEAL" />


            </android.support.v7.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:padding="10dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/check_box"
                    android:enabled="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="I Accept"
                    android:textColor="#000"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/terms"
                    android:text=" Terms and conditions of ORDOFY"
                    android:textStyle="bold"
                    android:textColor="#3498DB"/>

            </LinearLayout>




            <Button
                android:id="@+id/ROLE_RETAILER"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:padding="10dp"
                android:hint="ROLE_RETAILER"
                android:layout_marginTop="20dp"
                android:textColor="#FFF"
                android:layout_gravity="center"
                android:background="@drawable/btn_login"
                android:text="SIGN UP" />
        </LinearLayout>
    </ScrollView>

</FrameLayout>
