<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/cart_layout_frame"
    tools:context=".Fragments.Customize_order_frag1">

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progress"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:layout_centerHorizontal="true"/>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:focusedByDefault="false">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/cart_frame"
        android:focusedByDefault="false"
        android:padding="15dp"
        android:focusableInTouchMode="true"
        android:id="@+id/activivy_layout"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
             android:layout_centerInParent="true"
              android:id="@+id/text"
              android:layout_marginRight="12dp"
             android:textStyle="bold"
              android:textColor="@color/black"
              android:text="Customer Information"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/add_contact_btn"
                app:srcCompat="@drawable/add_gray"
               android:layout_toRightOf="@+id/text"/>
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <android.support.design.widget.TextInputLayout
                android:layout_width="0dp"
                android:layout_weight="1.2"
                android:layout_centerHorizontal="true"
                android:layout_height="match_parent">

                <AutoCompleteTextView
                    android:layout_width="match_parent"
                    android:id="@+id/cust_no"
                    android:layout_height="30dp"
                    android:hint="Customer Mob No."
                    android:paddingLeft="4dp"
                    android:layout_weight="2"
                    android:background="@drawable/pricebreak_background"
                    android:inputType="number"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:textColor="#000"
                    android:textSize="16sp" />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="0dp"
                android:layout_weight="1.2"
                android:layout_marginLeft="3dp"
                android:layout_centerHorizontal="true"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/cust_name"
                    android:layout_width="match_parent"
                    android:layout_weight="1.2"
                    android:background="@drawable/pricebreak_background"
                    android:layout_height="30dp"
                    android:gravity="center|start"
                    android:paddingLeft="5dp"
                    android:hint="Customer Name"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:scrollHorizontally="true"
                    android:textColor="#000"
                    android:textSize="16sp" />
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="1dp">

            <android.support.design.widget.TextInputLayout
                android:layout_width="0dp"
                android:layout_weight="1.2"
                android:layout_marginRight="3dp"
                android:layout_centerHorizontal="true"
                android:layout_height="match_parent">

                <AutoCompleteTextView
                    android:layout_width="match_parent"
                    android:id="@+id/cust_email"
                    android:layout_height="30dp"
                    android:hint="Customer Email"
                    android:paddingLeft="4dp"
                    android:layout_weight="2"
                    android:background="@drawable/pricebreak_background"
                    android:inputType="number"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:textColor="#000"
                    android:textSize="16sp" />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="0dp"
                android:layout_weight="1.2"
                android:layout_marginLeft="3dp"
                android:layout_centerHorizontal="true"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/company_name"
                    android:layout_width="match_parent"
                    android:layout_weight="1.2"
                    android:background="@drawable/pricebreak_background"
                    android:layout_height="30dp"
                    android:gravity="center|start"
                    android:paddingLeft="5dp"
                    android:hint="Company Name"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:scrollHorizontally="true"
                    android:textColor="#000"
                    android:textSize="16sp" />
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
           android:layout_marginTop="15dp"
           >

          <Button
              android:layout_width="0dp"
              android:layout_weight="0.7"
              android:id="@+id/search_btn"
              android:text="Search Products"
              android:textSize="12dp"
              android:layout_marginRight="3dp"
              android:background="@drawable/shadow_effect"
              android:layout_height="35dp" />

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="0.12"
                android:text="Select Category"
                app:srcCompat="@drawable/add_gray"
                android:layout_marginLeft="3dp"
                android:layout_height="35dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.7"
                android:layout_marginLeft="15dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >
                <Button
                    android:layout_width="match_parent"
                    android:textSize="12dp"
                    android:text="Select Category"
                    android:layout_marginLeft="3dp"
                    android:background="@drawable/shadow_effect"
                    android:layout_height="35dp" />




            </LinearLayout>



        </LinearLayout>




    </LinearLayout>
</ScrollView>

</RelativeLayout>

