<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="4dp"
    android:padding="4dp"
    android:layout_marginHorizontal="3dp"
    app:cardPreventCornerOverlap="false"
    app:cardElevation="3dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingRight="10dp"
        android:paddingLeft="5dp">
        <!--<TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/productname"
            android:textSize="15dp"
            android:textColor="#000"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="10dp"
            />-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:weightSum="10">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:layout_gravity="center"
                android:id="@+id/orderImage"
                android:layout_margin="2dp"
                android:paddingRight="5dp"
                />
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="4"
                android:layout_weight="4">

                <TableRow >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingHorizontal="3dp"

                        android:id="@+id/order_name_key"
                        android:layout_weight="1"
                        android:textSize="12dp"
                        android:text="Item name:"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:layout_weight="9"
                        android:paddingHorizontal="3dp"
                        android:id="@+id/order_name_val"
                        android:layout_marginBottom="8dp"/>
                </TableRow>

                <TableRow >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="12dp"
                        android:layout_weight="1"
                        android:text="Quantity: "
                        android:paddingHorizontal="3dp"

                        android:layout_marginBottom="8dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:id="@+id/order_quantity_val"
                        android:layout_weight="9"
                        android:paddingHorizontal="3dp"

                        android:layout_marginBottom="8dp"/>
                </TableRow>

                <TableRow android:layout_weight="1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="12dp"
                        android:paddingHorizontal="3dp"
                        android:layout_weight="1"
                        android:text="Purity :       "

                        android:layout_marginBottom="8dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:layout_weight="9"
                        android:paddingHorizontal="3dp"
                        android:id="@+id/puri"
                        android:layout_marginBottom="8dp"/>
                </TableRow>
                <TableRow  >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="12dp"
                        android:layout_weight="1"
                        android:paddingHorizontal="3dp"
                        android:text="Ordered Weight:"
                        android:layout_marginBottom="8dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:layout_weight="9"
                        android:paddingHorizontal="3dp"
                        android:id="@+id/order_weight_val"
                        android:layout_marginBottom="8dp"/>
                </TableRow>


                <TableRow android:layout_weight="1"
                    android:id="@+id/deliver_row">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="12dp"
                        android:paddingHorizontal="3dp"
                        android:layout_weight="1"
                        android:text="Delivered Weight :       "

                        android:layout_marginBottom="8dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:layout_weight="9"
                        android:paddingHorizontal="3dp"
                        android:id="@+id/delivered"
                        android:layout_marginBottom="8dp"/>
                </TableRow>
                <TableRow >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="12dp"
                        android:layout_weight="1"
                        android:paddingHorizontal="3dp"

                        android:text="Seller Name :"
                        android:layout_marginBottom="8dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:paddingHorizontal="3dp"
                        android:singleLine="true"
                        android:id="@+id/sellername"
                        android:layout_weight="9"
                        android:layout_marginBottom="8dp"/>
                </TableRow>

                <TableRow >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="12dp"
                        android:layout_weight="1"
                        android:paddingHorizontal="3dp"

                        android:text="Order Type:"

                        android:layout_marginBottom="8dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:id="@+id/order_type"
                        android:layout_weight="9"
                        android:paddingHorizontal="3dp"
                        android:layout_marginBottom="8dp"/>
                </TableRow>

                <TableRow >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="12dp"
                        android:layout_weight="1"
                        android:paddingHorizontal="3dp"

                        android:text="Status:"

                        android:layout_marginBottom="8dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:layout_weight="9"
                        android:paddingHorizontal="3dp"

                        android:id="@+id/order_status_val"
                        android:layout_marginBottom="8dp"/>
                </TableRow>





            </TableLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:weightSum="4">

            <Button
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:id="@+id/cancel"
                android:text="CANCEL"
                android:textStyle="bold"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/black"
                android:background="@drawable/pricebreak_background"
                android:layout_marginRight="2dp"
                android:layout_weight="2"/>
           <!-- <Button
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:text="TRACK"
                android:textStyle="bold"
                android:id="@+id/tack"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/black"
                android:layout_marginLeft="2dp"
                android:background="@drawable/pricebreak_background"
                android:layout_weight="2"/>-->
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>