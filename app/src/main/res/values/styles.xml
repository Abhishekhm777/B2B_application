<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/stpi_default_primary_color</item>
        <item name="colorPrimaryDark">@color/Text</item>
        <item name="colorAccent">@color/TextBar</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>

    </style>


    <style name="Floting_toolbae" >
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/Blue_colour</item>
        <item name="colorPrimaryDark">@color/Text</item>
        <item name="colorAccent">@color/TextBar</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>

    </style>
    ////////'''''''''''''''''''To change the Colour of the drawer
    Icon,,,,,,,,,,,.....................///////

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

    //////////////////To change the Tool Bar Arrow Color....////////////////////////////////////

    <style name="Toolbar_Arrow" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlNormal">@color/Titel</item>

    </style>
    ///////////////////////////////Only for Login Page///////////////////////

    <style name="Logintheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@android:color/tab_indicator_text</item>
        <item name="colorAccent">@color/TextBar</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>


    <style name="RegistrationPage">
        <item name="android:textColorHint">@color/black</item>
        <item name="android:editTextColor">@color/black</item>

        <item name="android:background">@color/white</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="DrawerArrowStyle2" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="color">@android:color/white</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>


